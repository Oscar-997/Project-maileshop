<div class="new-products">
    {{> header}}

    <div class="new-products-content mt-4">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-sm-0 filter-products">
                    {{> filter}}
                </div>
                <div class="col-xl-9 col-lg-9 col-sm-12">
                    <div class="row">
                       {{#each fabric}}
                            <div class="col-sm-6 col-lg-4">
                                <div class="card card-item" style="width: 16rem;">
                                    <a href="/newPro/{{this.slug}}">
                                        <img class="card-img-top img-products" src="{{this.image}}" alt="Card image cap">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.name}}</h5>
                                        <p class="card-text">{{this.description}} </p>
                                        <p class="card-text">{{this.price}} VNĐ</p>
                                        <a href="/newPro/{{this.slug}}" class="btn btn-primary">Xem sản phẩm</a>
                                    </div>
                                    
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> footer}}
</div>