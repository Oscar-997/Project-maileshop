    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            {{> adminHeader}}
        </div>
    </nav>
    <!-- top navigation bar -->
    <!-- offcanvas -->
    {{> adminOffcanvas }}

<!-- Content -->
    <main class="mt-5 pt-3">
        <div class="container-fluid">
          {{!-- up slider --}}
          <a class="btn btn-primary" href="/admin/creat/slider" role="button">Thêm sliders mới</a>
            {{!-- admin slider --}}
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">STT</th>
                  <th scope="col">Mô tả hình ảnh</th>
                  <th scope="col">Hình ảnh</th>
                  <th scope="col">Trang thái active</th>
                </tr>
              </thead>
              <tbody>
                {{#each sliders}}
                <tr>
                  <th scope="row">{{sum @index  1}}</th>
                  <td>{{this.description}}</td>
                  <td>
                    <img class="img-products" src="{{this.image}}" alt="">
                  </td>
                  <td>
                    {{this.active}}
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
        </div>
    </main>