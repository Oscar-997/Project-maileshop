    <div class="container-fluid">
        {{> adminHeader}}
    </div>
</nav>
<!-- top navigation bar -->
<!-- offcanvas -->
{{> adminOffcanvas }}

<main class="mt-5 pt-3">
    <div class="container-fluid">
        <a class="btn btn-primary" href="/admin/creat/info" role="button">Thêm info mới</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Mô tả</th>
                </tr>
            </thead>
            <tbody>
                {{#each info}}
                <tr>
                    <th scope="row">{{sum @index 1 }}</th>
                    <td>
                        <img class="img-products" src="{{this.image}}" alt="">
                    </td>
                    <td>{{this.heading}}</td>
                    <td>{{this.description}}</td>
                    {{else}}
                    <td colspan="4" class="text-center">
                        Chưa có thông tin
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</main>